{
	"name": "iris",
	"version": "0.1.0",
	"author": "Enoch Klu",
	"main": "app/background.js",
	"license": "",
	"repository": "https://github.com/Elkanah-me/iris",
	"description": "A task manager for Windows.",
	"scripts": {
		"dev": "nextron",
		"prod": "next start renderer",
		"build": "nextron build",
		"postinstall": "electron-builder install-app-deps"
	},
	"build": {
		"appId": "app.iris",
		"productName": "Iris",
		"copyright": "Copyright 2021 Enoch Klu",
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true,
			"installerIcon": "resources/icons/icon.ico",
			"uninstallerIcon": "resources/icons/icon.ico"
		},
		"win": {
			"icon": "resources/icons/icon.ico",
			"appId": "app.iris",
			"publisherName": "Enoch Klu",
			"target": [
				{
					"target": "nsis",
					"arch": "x64"
				}
			]
		},
		"files": [
			"**/*",
			"main",
			"build/",
			"!renderer",
			"renderer/out"
		],
		"directories": {
			"output": "dist"
		},
		"extraResources": [
			{
				"from": "resources/icons",
				"to": "./",
				"filter": [
					"**/*"
				]
			}
		]
	},
	"devDependencies": {
		"@date-io/date-fns": "1.0.0",
		"@material-ui/core": "^4.11.0",
		"@material-ui/icons": "^4.9.1",
		"@material-ui/pickers": "^3.2.10",
		"clsx": "^1.1.1",
		"date-fns": "^2.16.1",
		"electron": "^11.1.1",
		"electron-builder": "^22.9.1",
		"eslint": "^7.15.0",
		"eslint-config-prettier": "^7.0.0",
		"eslint-plugin-prettier": "^3.3.0",
		"eslint-plugin-react": "^7.21.5",
		"lodash": "^4.17.20",
		"next": "^10.0.6",
		"next-redux-wrapper": "^6.0.2",
		"nextron": "^6.0.3",
		"prettier": "^2.2.1",
		"prop-types": "^15.7.2",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"react-redux": "^7.2.2",
		"redux": "^4.0.5"
	},
	"dependencies": {
		"electron-serve": "^1.0.0"
	}
}
